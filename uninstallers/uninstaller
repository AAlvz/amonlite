#!/bin/bash
# The awesome one-liner for Amon
# Author: Martin Rusev <martin@amon.cx>

command_exists() {
    type "$1" &> /dev/null ;
}

set -e 

# Debian based distros - Tested and supported on : Debian, Ubuntu
if command_exists dpkg ; then
	wget --no-check-certificate https://raw.github.com/martinrusev/amon/master/uninstallers/debian_uninstaller
	sudo bash debian_uninstaller
	rm -rf debian_uninstaller*
# RPM based distros - Tested and supported on : Fedora, CentOS
elif command_exists rpm ; then
	wget --no-check-certificate https://raw.github.com/martinrusev/amon/master/uninstallers/rpm_uninstaller
	sudo bash rpm_uninstaller
	rm -rf rpm_uninstaller*
# Mac OS
elif [ "$(uname -s)" != "Darwin" ]; then
	wget --no-check-certificate https://raw.github.com/martinrusev/amon/master/uninstallers/macos_uninstaller
	sudo bash macos_uninstaller
	rm -rf macos_uninstaller*
else 
	echo "Your operating system is not supported at the moment"
fi
